{% extends "page" %}
{% block meta-tags %}  
{% parent %}      
    <meta name="robots" id="robotsMeta" content="{{themeSettings.robots_value}}" />
    <meta name="googlebot" id="googleBotMeta" content="{{themeSettings.googlebot_value}}" />
    <meta name="google-site-verification" content="{{themeSettings.google-site-verification_value}}" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <meta name="verify-v1" content="GyEpGH2+ELQEr5SNfmuM4t4YK8HYpuY49UbvQgcxFUM=" />
    <meta name="description" content="Jelly Belly Candy Company - Official Site.  Features Factory fresh candy, jelly beans, chocolate, gummy, licorice and more" />
    <meta name="keywords" content="Candy, jelly jeans, candy,  chocolate,  gummy, licorice, Bean Boozled, beanboozled, belly flops " />
    <meta name="owner" content="Jelly Belly Candy Company" />
    <meta name="revisit-after" content="7 days" />
    <meta name="rating" content="general" />
{% endblock meta-tags %}

{% block body-tag-classes %}mz-visit-us mz-factory{% endblock body-tag-classes %}

{% block body-content %}
    
    <h1 class="mz-pagetitle">About Jelly Belly</h1>
    <ul class="jb-feature-brands">
        
        <li class="jb-feature-brand-listing">
            <div class="jb-feature-brand-item">
                <h3>Company History</h3>
                <figure>
                  <a href="/company-history">
                    <img alt="" title="Company History" src="/resources/images/about-jb/company-history.png" width="133" border="0"> 
                  </a>
                </figure>
                <p>
                  The Jelly Belly Candy Co. makes more than 100 mouthwatering candies, including such delights as chocolates, gummies, sour candies, and confections for all the seasons.
                  <a class="jb-feature-brand-moreinfo" href="/company-history">View More ►</a>
                </p>
                <div class="clearfix"></div>
            </div>
        </li>


        <li class="jb-feature-brand-listing">
            <div class="jb-feature-brand-item">
                <h3>Principles and Practices</h3>
                <figure>
                  <a href="/principles-and-practices">
                    <img title="Principles and Practices" alt="" src="/resources/images/about-jb/logo.png" width="98" border="0">
                  </a>
                </figure>
                <p>
                  Jelly Belly Candy Company strives to ensure the highest standards of quality not only in our products, but our safety practices. Includes California Transparency in Supply Chain statement.
                  <a class="jb-feature-brand-moreinfo" href="/principles-and-practices">View More ►</a>
                </p>
                <div class="clearfix"></div>
            </div>
        </li>
        
        
        <li class="jb-feature-brand-listing">
            <div class="jb-feature-brand-item">
