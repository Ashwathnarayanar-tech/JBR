                        color: #fff;
                        padding: 10px 8px;
                        cursor: pointer;
                    }
                    input {
                        position:absolute;
                        top:-30px;
                    }
                    input:checked + span {
                        background-color:#0080b7;
                        color:#fff;
                        padding: 10px 8px;
                        &:hover {
                            color: #00aeef;
                        }
                    }
                }
            }
            
        .mz-l-formfieldgroup {
            width: 100%;
            .mz-l-formfieldgroup-norows {
                display: none;
                padding-left: 32px;
            }
            .mz-l-formfieldgroup-cell {
                padding-right: 12.5px;
                position: relative;
                .mz-validationmessage {
                    position: absolute;
                    top: 40px;//50px;
                    &.paymentMe {
                        top:108px;
                    }
                }
				.mz-paymenttype-check {
                    display: inline-block;
                }
                input[type="text"], input[type="password"],  input[type="tel"],  input[type="email"],  select{
                    margin-right: 10px;
                    width: 274px;
                     box-sizing: border-box;
                    -moz-box-sizing: border-box;
                    -webkit-box-sizing: border-box;
                    line-height: 28px;
                }
                .mz-l-formfieldgroup-halfsize {
                    width: 128px;
                }
            }
            .cvv-info {

                display: block;
                position: absolute;
                right: 10px;
                font-size: 11px;
                color: #9a9a9a;
                bottom: 2px;
                cursor: pointer;
                &:hover {
                    color: #faa634;
                    .cvv-info-details {
    					display: block;
    				}
                }
                .cvv-info-details:after{
    				content: '';
    				display: block;
    				position: absolute;
    				left: 19px;
    				bottom: 100%;
    				width: 0;
    				height: 0;
    				border-color: transparent transparent #ffffff transparent ;
    				border-style: solid;
    				border-width: 6px;
    			 }
    			 .cvv-info-details:before{
    				content: '';
    				display: block;
    				position: absolute;
    				left: 18px;
    				bottom: 100%;
    				width: 0;
    				height: 0;
    				border-color: transparent transparent #cccccc transparent ; 
    				border-style: solid;
    				border-width: 7px; 
    			 }
    			 .cvv-info-details{
    				display:none;
    				margin-left: 20px;
